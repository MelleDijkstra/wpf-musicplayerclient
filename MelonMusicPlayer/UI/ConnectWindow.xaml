<Window x:Class="MelonMusicPlayerWPF.UI.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MelonMusicPlayer" Height="300" ResizeMode="NoResize" Width="350" WindowStartupLocation="CenterScreen">
    <Border Padding="20">
        <StackPanel>

            <Label>IP Address:</Label>
            <TextBox DockPanel.Dock="Top"
                     Name="TbIP" Padding="5" />

            <Button DockPanel.Dock="Bottom" Height="70"
                    FontSize="15"
                    Name="BtnConnect"
                    Margin="0 20"
                    Content="CONNECT" Background="#FF148949" Foreground="White" Command="{Binding ConnectCommand}" />

        </StackPanel>
    </Border>
</Window>